<h1>Crear Nueva Necesidad</h1>

<%= form_with(model: @need, local: true) do |form| %>
  <% if @need.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@need.errors.count, "error") %> prohibited this need from being saved:</h2>
      <ul>
        <% @need.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description, "Descripción de la Necesidad" %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :location, "Ubicación" %>
    <%= form.text_field :location %>
  </div>

  <div class="actions">
    <%= form.submit "Crear Necesidad" %>
  </div>
<% end %>

