<h1><%= @need.description %></h1>
<p>Ubicaci√≥n: <%= @need.location %></p>
<p>Estado: <%= @need.status %></p>

<h2>Notificaciones</h2>
<ul>
  <% @need.notifications.each do |notification| %>
    <li><%= notification.message %></li>
  <% end %>
</ul>
<%= form_with model: [ @need, @need.messages.build ], local: true do |form| %>
    <div class="field">
      <%= form.label :content, "Mensaje" %>
      <%= form.text_area :content %>
    </div>
    <div class="actions">
      <%= form.submit "Enviar Mensaje" %>
    </div>
  <% end %>
  
<%= link_to "Editar Necesidad", edit_need_path(@need) %> |
<%= link_to "Volver a la lista de necesidades", needs_path %>
